@page
@model Model.ResumeModel.Candidate
@{
    ViewData["Title"] = "Create Candidate";
}

<h2>Create Candidate</h2>

<form id="createCandidateForm" onsubmit="event.preventDefault(); createCandidate();">
    <div class="mb-3">
        <label class="form-label">First Name</label>
        <input type="text" class="form-control" id="firstName" required />
        <span class="text-danger" id="firstNameError"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Last Name</label>
        <input type="text" class="form-control" id="lastName" required />
        <span class="text-danger" id="lastNameError"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Email</label>
        <input type="email" class="form-control" id="email" required />
        <span class="text-danger" id="emailError"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Mobile</label>
        <input type="text" class="form-control" id="mobile" pattern="^\d{10}$" title="Enter a 10-digit number" />
        <span class="text-danger" id="mobileError"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Degree</label>
        <select class="form-control" id="degree">
            <option value="">-- Select Degree --</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
