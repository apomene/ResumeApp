@page
@model Model.Candidate
@{
    ViewData["Title"] = "Candidates List";
}

<h2>Candidates</h2>

<table class="table">
    <thead>
        <tr>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>Degree</th>
            <th>Creation Time</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody id="candidatesTableBody">
        <!-- Data will be populated dynamically -->
    </tbody>
</table>

<a asp-page="/Candidates/Create" class="btn btn-primary">Add Candidate</a>

